{
  "include": [
    "game.debug.json",
    "game.objects.json",
    "game.controllers.json"
  ],
  "classes": {
    "camera": {
      "components": {
        "camera": {
          "pass": "setup-main-camera",
          "globalAlias": "mainCamera"
        },
        "attach to tagged": {
          "tag": "player"
        },
        "tag": {
          "tag": "camera"
        }
      },
      "properties": {
        "zoom": ["0.5"],
        "zoomFunction": ["fixed diagonal zoom function", "1000"]
      }
    },

    "player-death-effects": {
      "components": {
        "particles": {
          "effect": "death.p",
          "masterProperty": "particles"
        },
        "particles1": {
          "type": "particles",
          "effect": "death-small.p",
          "masterProperty": "particles"
        },
        /*
        "one shot sound": {
          "event": "position",
          "sound": "death.wav",
        },
        //*/
      }
    },

    "player": {
      "components": {
        "body": {
          "bodyType": "DynamicBody",
          "noRotation": true
        },
        "circle fixture": {
          "radius": 20,
          "collisionCategories": [
            "player"
          ]
        },
        "tag:player": { "type": "tag", "tag": "player" },
        "sprite": {
          "sprite": "player-01",
          "scale": 0.7
        },
        "destroy on event": {
          "event": "hitTrap",
          "initEvent": true,
          "preDestroyEvent": "preDestroy"
        },
        "spawn on event": {
          "classes": ["player-death-effects"],
          "event": "preDestroy"
        },
        "send event to game": {
          "ownerEvent": "preDestroy",
          "gameEvent": "lose",
        },
        "com.github.oldnpluslusteam.old42_game.components.Light$Decl": {
        },
      }
    }
  },

  "entities": [
    { /* Player */
      "inherit": ["player", "player-controller"]
    },
    {
      "inherit": ["camera"]
    },

    {
      "inherit": ["wall-01"],
      "properties": {
        "position": ["0", "50"]
      }
    },

    {
      "inherit": ["trap-04"],
      "properties": {
        "position": ["0", "-150"]
      }
    }
  ]
}
